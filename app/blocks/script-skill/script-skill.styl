.script-skill
	position relative

	&__range
		position relative
		margin 30px (0 -($range_check_width/2)) 0
		height 40px
		background url('../images/range-line.png') no-repeat ($range_check_width/2) bottom

	&__meter
		sprite($range_check)
		position absolute
		top -3px
		left 0
		cursor pointer

	&__options
		display flex
		font-size 13px
		font-weight 700
		line-height 19px
		color $color-brown

		li:nth-child(1)
			margin-top 3px
			width 146px

		li:nth-child(2)
			width 227px

		li:last-child
			align-self center
			margin-top -3px
			margin-left auto
