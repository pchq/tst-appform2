.application
	margin 0 auto
	padding 62px 118px 73px 112px
	width 1000px
	background url('../images/bg.jpg')

	a
		color $color-link

	&__header
		margin-bottom 52px

	&__top
		display flex
		justify-content space-between

	&__logo
		align-self flex-start

	&__stamp
		margin-top -14px
		margin-right -64px

	&__title
		margin-left 33%

	&__section

		&--main-info
			margin-bottom 69px

		&--skills
			margin-bottom 63px

		&--script-skill
			margin-bottom 34px

		&--about
			margin-bottom 46px
			padding-left 2px

		&--future
			margin-bottom 79px

		&--date
			width 390px

	&__heading
		margin-bottom 10px
		font-size 24px
		font-weight 700
		color $color-brown

		&--tight
			letter-spacing -.1px

		&--wide
			letter-spacing .1px

	&__description
		font-size 15px
		line-height 23px
		letter-spacing -.06px
		color $color-gray-light

		&--skills
			margin-bottom 28px

		&--about
			margin-top 14px
			margin-bottom 23px
			padding-left 1px
			letter-spacing -.04px

		&--future
			margin-top -2px
			margin-bottom 12px
			padding-left 2px
			letter-spacing -.09px
